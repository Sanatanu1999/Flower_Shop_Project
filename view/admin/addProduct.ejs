<%- include('../includes/header.ejs')%>
<link rel="stylesheet" href="/CSS/addProduct.css">
</head>
<body>
    <%- include('../includes/navbar.ejs')%>
    <main>
    <div class="container">
        <h1>Add New Product</h1>
        <form action="/postAdd" method="post" enctype="multipart/form-data">
            <label for="productName">Product Name:</label>
            <input type="text" id="productName" name="productName" required>

            <label for="description">Description:</label>
            <textarea id="description" name="description" rows="4" required></textarea>

            <label for="price">Price:</label>
            <input type="number" id="price" name="price" step="0.01" required>

            <label for="category">Category:</label>
            <select id="category" name="category" required>
                <option value="rose1">Rose1</option>
                <option value="rose2">Rose2</option>
                <option value="mixed_flower_1">mixed_flower_1</option>
                <option value="mixed_flower_2">mixed_flower_2</option>
                <option value="lily_1">lily_1</option>
                <option value="lily_2">lily_2</option>
                <option value="yellow1_flower">yellow1_flower</option>
                <option value="yellow2_flower">yellow2_flower</option>
            </select>

            <label for="product_image">Product Image:</label>
            <input type="file" id="product_image" name="product_image">

            <button type="submit">Add Product</button>
        </form>
    </div>
 </main>
